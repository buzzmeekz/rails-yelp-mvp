<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h3>Add a review for <%= @restaurant.name %></h3>

      <%= simple_form_for([@restaurant, @review]) do |f| %>
      <%= f.input :content %> 
      <%= f.input :rating, collection: 0..5 %>
      <%= f.submit %> 
      <% end %>

    </div>
  </div>
</div>