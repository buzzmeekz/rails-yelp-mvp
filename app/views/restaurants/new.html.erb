<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h1>Add a new restaurant</h1>

      <%= simple_form_for(@restaurant) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %> 
      <%= f.input :phone_number %>
      <%= f.input :category, collection: Restaurant::CATEGORIES  %>
      <%= f.submit %> 
      <% end %>

    </div>
  </div>
</div>